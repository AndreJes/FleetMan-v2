<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="MainWindowsStyle" TargetType="Window">
        <Setter Property="Height" Value="400"></Setter>
        <Setter Property="Width" Value="550"></Setter>
        <Setter Property="ResizeMode" Value="NoResize"></Setter>
        <Setter Property="Background">
            <Setter.Value>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1" MappingMode="RelativeToBoundingBox" SpreadMethod="Repeat">
                    <GradientStop Color="#FF323232" Offset="0.686"/>
                    <GradientStop Color="#FF252525" Offset="0.017"/>
                    <GradientStop Color="#FF2B2B2B" Offset="0.925"/>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>