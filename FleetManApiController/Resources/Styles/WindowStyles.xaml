<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:FleetManApiController.Resources.Styles">

    <Style x:Key="MainWindowsStyle" TargetType="Window">
        <Setter Property="Height" Value="400"></Setter>
        <Setter Property="Width" Value="550"></Setter>
        <Setter Property="ResizeMode" Value="NoResize"></Setter>
        <Setter Property="Background">
            <Setter.Value>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1" MappingMode="RelativeToBoundingBox" SpreadMethod="Repeat">
                    <GradientStop Color="#FF151515" Offset="0"/>
                    <GradientStop Color="#7F4B4B4B" Offset="0.665"/>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>