<UserControl x:Class="FleetManApiController.UserControls.StatusLabelUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FleetManApiController.UserControls"
             mc:Ignorable="d">
    <StackPanel Orientation="Horizontal">
        <Label x:Name="DescriptionLabel" Style="{StaticResource SubLabelStyle}" Content="{Binding Description, UpdateSourceTrigger=PropertyChanged}"></Label>

        <Ellipse x:Name="StatusEllipse" Width="10" Height="10" StrokeThickness="1" VerticalAlignment="Center" HorizontalAlignment="Center"></Ellipse>
        <Label x:Name="StateLabel" Style="{StaticResource StatusLabelStyle}"></Label>
    </StackPanel>
</UserControl>
